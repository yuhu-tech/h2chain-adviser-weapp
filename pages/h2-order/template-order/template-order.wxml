<!--pages/h2-order/template-order/template-order.wxml-->
<toptip id="inToptip" />

<view class='page'>
  <view class='page_bd'>

    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio" wx:for="{{list}}" wx:key="">
        <view class='radio_l'>
          <radio value="{{type==='workcontents'?item.workcontent:item.attention}}" color='#50d9e3' />
          <view class='radio_content n200'>
            <text>{{type==='workcontents'?item.workcontent:item.attention}}</text>
          </view>
        </view>
        <view class='radio_edit b200' bindtap='doEdit' data-optiontype='modify' data-value="{{type==='workcontents'?item.workcontent:item.attention}}" data-id="{{item.id}}">
          <text>编辑</text>
        </view>
        <view class='radio_edit r200' bindtap='doDelete' data-id='{{item.id}}' data-type="{{type==='workcontents'?'workcontent':'attention'}}">
          <text>删除</text>
        </view>
      </label>
      <view class='fake'>
        <view class='fab' bindtap='doEdit' data-optiontype='add'>
          <wux-icon type="ios-add" size='30' />
        </view>
      </view>
      <wux-white-space body-style='height:400rpx' />
    </radio-group>

    <view class='btn_box'>
      <wux-button type='main' bind:click="doSubmit">
        <view class='text_btn'>完成</view>
      </wux-button>
    </view>

  </view>
</view>