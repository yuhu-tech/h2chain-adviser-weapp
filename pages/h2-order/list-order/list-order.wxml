<!--pages/h2-order/list-order/list-order.wxml-->
<guide id="inGuide" />

<view class='page'>
  <view class='page_bd'>

    <wux-row>
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class='picker'>
          <view></view>
          <view>{{date?date:'选择用工日期'}}</view>
          <view>
            <wux-icon type='md-arrow-dropdown' />
          </view>
        </view>
      </picker>
    </wux-row>

    <!-- 待发布 -->
    <block wx:for="{{order_list_wait}}" wx:key="">
      <view class='divider_n'>
        <wux-divider position="right" text="待确认" wx:if="{{index===0}}" />
      </view>
      <view class='card'>
        <view class='card_hd card_hd_padding'>
          <view class='card_hd'>
            <image src='/images/order-avatar.png' />
            <view class='card_hd_job'>{{item.originorder.occupation}}</view>
            <view class='n200'>{{item.hotel.hotelname}}</view>
          </view>
          <view class='card_p_hd_link b200' bindtap='goNewOrder' data-orderid='{{item.originorder.orderid}}'>
            <text class='card_p_hd_link_text'>发布招聘</text>
            <wux-icon type="ios-arrow-forward" size='20' />
          </view>
        </view>
        <view class='card_bd n200'>
          <view>
            <text class='card_bd_date'>{{item.originorder.date}}</text>
            <text>{{item.originorder.time}}</text>
          </view>
          <view wx:if="{{item.originorder.mode===1}}">
            <text>男 {{item.originorder.male}}</text>
            <text class='blank_female'>女 {{item.originorder.female}}</text>
          </view>
          <view wx:else>
            <text>人数 {{item.originorder.count}}</text>
          </view>
        </view>
        <!-- <view class='card_ft'>
          <wux-button type='main' bind:click="goNewOrder" data-orderid='{{item.originorder.orderid}}'>
            <view class='text_btn'>发布招聘</view>
          </wux-button>
        </view> -->
      </view>
      <wux-white-space body-style="height:30rpx" wx:if="{{index!=order_list_wait.length-1}}" />
    </block>

    <!-- 已发布 -->
    <block wx:for="{{order_list_ing}}" wx:key="">
      <view class='divider_n'>
        <wux-divider position="right" text="招募中" wx:if="{{index===0}}" />
      </view>
      <view class="card {{item.modifiedorder.length>0?'card_shadow_r':''}}">
        <view class='card_p_hd' bindtap='goOrderInfo' data-orderid='{{item.originorder.orderid}}'>
          <view class='card_p_hd_img'>
            <image src='/images/order-avatar.png' />
            <view class='card_hd_job'>{{item.originorder.occupation}}</view>
          </view>
          <view class='card_p_hd_link b200'>
            <text class='card_p_hd_link_text'>订单详情</text>
            <wux-icon type="ios-arrow-forward" size='20' />
          </view>
        </view>
        <view class='card_p_bd' bindtap='goOrderDetail' data-orderid='{{item.originorder.orderid}}'>
          <view class='card_p_bd_date'>
            <view>
              <text class='card_bd_date'>{{item.modifiedorder[0].date||item.originorder.date}}</text>
              <text>{{item.modifiedorder[0].time||item.originorder.time}}</text>
            </view>
            <view class='r200'>
              <text wx:if="{{item.modifiedorder.length>0&&item.modifiedorder[0].time!==item.originorder.time}}">时间变更</text>
            </view>
          </view>
          <wux-white-space body-style="height:20rpx" />
          <view class='card_p_bd_count b200'>
            <view>
              <view wx:if="{{item.modifiedorder.length>0?(item.modifiedorder[0].changedmode===0):(item.originorder.mode===0)}}">
                <text>人数 {{item.countyet}}/{{item.modifiedorder[0].changedcount||item.originorder.count}}</text>
              </view>
              <view wx:else>
                <text class='blank_male'>男 {{item.maleyet}}/{{item.modifiedorder[0].changedmale||item.originorder.male}}</text>
                <text>女 {{item.femaleyet}}/{{item.modifiedorder[0].changedfemale||item.originorder.female}}</text>
              </view>
            </view>
            <view class='r200'>
              <text wx:if="{{item.modifiedorder.length>0&&(item.originorder.count!==item.modifiedorder[0].changedcount||item.originorder.male!==item.modifiedorder[0].changedmale||item.originorder.female!==item.modifiedorder[0].changedfemale)}}">人数变更</text>
            </view>
          </view>
          <wux-white-space body-style="height:20rpx" />
          <view class='card_p_bd_salary'>
            <text>{{item.postorder.salary}}元/小时</text>
            <text class='n200'>{{item.hotel.hotelname}}</text>
          </view>
        </view>
        <view class='card_p_ft'>
          <wux-button type='main' bindtap='jumpToPt' data-orderid='{{item.originorder.orderid}}'>
            <view class='text_btn'>分享给PT</view>
          </wux-button>
          <wux-button type='main' bindtap='jumpToAgent' data-orderid='{{item.originorder.orderid}}'>
            <view class='text_btn'>分享给代理</view>
          </wux-button>
          <wux-button type='main' bind:click="goQRCode" data-orderid='{{item.originorder.orderid}}'>
            <view class='text_btn'>现场报名</view>
          </wux-button>
        </view>
      </view>
      <wux-white-space body-style="height:30rpx" />
    </block>

  </view>
</view>