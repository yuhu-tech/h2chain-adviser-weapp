/* pages/h2-order/new-order/new-order.wxss */

page {
  height: 100%;
}

.page {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card_info {
  background-color: #eee;
  padding: 30rpx;
}

/*  card */

.card {
  background-color: #fff;
  border-radius: 5rpx;
}

/* card_top */

.card_top {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: solid 1rpx #eee;
}

.card_top image {
  height: 60rpx;
  width: 60rpx;
  border-radius: 5%;
}

.card_top_job {
  margin: 0 20rpx;
}

/* card_btm */

.card_btm {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.card_btm_date, .card_btm_count_male {
  margin-right: 20rpx;
}

/* form */

.form {
  padding: 30rpx 50rpx;
  display: flex;
  flex-direction: column;
}

.form_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form_item_radio {
  width: 430rpx;
  padding: 20rpx;
  border-bottom: solid 1rpx #eee;
}

.radio {
  margin-right: 50rpx;
}

.form_item_ipt {
  width: 430rpx;
  padding: 20rpx;
  border-bottom: solid 1rpx #eee;
  display: flex;
  justify-content: space-between;
}

.form_item_ipt input {
  width: 300rpx;
}

.form_item_sp {
  display: flex;
  justify-content: space-between;
}

.form_item_temp {
  width: 430rpx;
  padding: 0 20rpx 20rpx;
  border-bottom: solid 1rpx #eee;
}

.form_item_temp_text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.form_item_temp_link {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* btn */

.page_ft {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text_btn {
  width: 500rpx;
}
